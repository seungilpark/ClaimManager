<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Edit" Class="mr-3" /> Edit Claim Item
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudForm >
            <MudTextField Class="my-3"T="string" Label="Payee"  Required="true" RequiredError="Payee name is required!" />
            @*<MudDatePicker Label="Date" @bind-Date="ClaimItem.Date" />*@
            <MudTextField Class="my-3"T="string" Label="Description" @bind-Value="ClaimItem.Description" Required="true" RequiredError="Payee name is required!" />
            <MudTextField Class="my-3"@bind-Value="ClaimItem.Amount" Label="Amount" Variant="Variant.Outlined" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.AttachMoney" AdornmentColor="Color.Warning" />
            <MudTextField Class="my-3"Value="ClaimItem.USDAmount" Label="USD Amount" Variant="Variant.Outlined" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.AttachMoney" AdornmentColor="Color.Warning" />
            <MudTextField Class="my-3"T="string" Label="Image" @bind-Value="ClaimItem.Image" />
            <MudSelect Class="my-3"T="int" Label="Category">
                <MudSelectItem Value="1">Category 1</MudSelectItem>
                <MudSelectItem Value="2">Category 2</MudSelectItem>
                <MudSelectItem Value="3">Category 3</MudSelectItem>
            </MudSelect>
            <MudSelect Class="my-3"T="int" Label="Currency">
                <MudSelectItem Value="1">KRW</MudSelectItem>
                <MudSelectItem Value="2">CAD</MudSelectItem>
            </MudSelect>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="()=> {MudDialog.Close(DialogResult.Ok(true)); }" Class="px-10">Confirm</MudButton> 
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    [Parameter] public CreateClaimCommandItemDto ClaimItem { get; set; }


}
